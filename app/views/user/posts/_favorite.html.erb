<!-- いいねするの部分テンプレート -->
<% if post.user.id == current_user.id %>
	<p><span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span><%= post.favorites.count %></p>
<% else %>
	<div>
		<% if post.favorited_by?(current_user) %>
				<%= link_to user_post_favorites_path(post.id), method: :delete, remote: true do %>
					<p><span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
				<% end %>
				<%= post.favorites.count %>：いいね</p>
		<% else %>
				<%= link_to user_post_favorites_path(post.id), method: :post, remote: true do %>
					<p><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
				<% end %>
				<%= post.favorites.count %>：いいね</p>
		<% end %>
	</div>
<% end %>