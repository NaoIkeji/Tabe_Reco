<h2>投稿ページ</h2>

<%= form_for(@post, url:user_post_path(@post.id) ,method: :patch) do |f| %>

	<div>
	  <% if @post.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
	      <ul>
	      <% @post.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	</div>

	<div>
	　　<label>投稿画像</label>
		<%= f.attachment_field :post_image %>
	</div>

	<div>
		<label>目標</label>
		<br>
		<% current_user.targets.each do |u| %>
			<%= f.radio_button :post_target, u.target_body %>
			<%= u.target_body %>
			<br>
		<% end %>
	</div>

	<div>
		<label>つぶやき</label>
		<%= f.text_area :post_body %>
	</div>

	<hr>
	<%= f.submit "投稿する" %>
<% end %>
