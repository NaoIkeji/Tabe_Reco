<%= render 'nav' %>

<hr>

<h2>マイページ</h2>

<div>
	<%= current_user.profile_image %>
	<%= current_user.nickname %>
	<%= current_user.introduction %>
	<% if user_signed_in? %>
		<p>プロフィールの編集をする</p>
	<% end %>
</div>


<div>
	<% @posts.each do |post| %>
		<%= attachment_image_tag post, :post_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %>
	  <p>目標</p>
		<%= post.post_target %>
	　<p>つぶやき</p>
		<%= post.post_body %>
			<p>いいね！</p>
			<p>応援する</p>
			<p>コメントする</p>
		<% if user_signed_in? %>
			<p>編集</p>
			<p>削除</p>
		<% end %>
	<% end %>
</div>