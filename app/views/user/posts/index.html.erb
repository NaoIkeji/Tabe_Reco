
<%= render 'user/posts/nav' %>

<div>
  <p class="headline">投稿一覧</p>
<div>

<div class="row">
<div class="col-lg-3"></div>


<div class="post-list col-lg-6">
<% @posts.each do |post| %>
<div class="post">
	<div class="post-user">
		<p>
			<%= link_to user_user_path(post.user.id) do %>
				<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50', class:"img-circle" %><%= post.user.nickname %>
			</p>
		<% end %>
	</div>

	<div class="post-image">
	<%= link_to user_post_path(post.id) do %>
		<%= attachment_image_tag post, :post_image, :fill, 520, 430, fallback: "no_image.jpg", size:'520x430' %>
	<% end %>
	</div>

	<div class="post-target">
		<p>目標</p>
		<%= post.post_target %>
	</div>

	<div class="post-body">
		<p>つぶやき</p>
		<%= post.post_body %>
    </div>

    <div class="post-stats">
	    <div id="favorites_buttons_<%= post.id %>">
			<%= render partial: 'user/posts/favorite', locals: {post: post} %>
		</div>

		<div id="cheers_buttons_<%= post.id %>">
			<%= render partial: 'user/posts/cheer', locals: {post: post} %>
		</div>

		<div>
			<%= link_to "#{post.comments.count}コメント", user_user_path(post.user.id) %>
		</div>
	</div>

	<div>
		<% if post.user.id == current_user.id %>
			<p><%= link_to '編集', edit_user_post_path(post.id) %></p>
			<p><%= link_to '削除', user_post_path(post.id), method: :delete %></p>
		<% end %>
	</div>
   </div>
<% end %>
</div>

<div class="col-lg-3"></div>

</div>
<!-- row_end -->

