<div class="row">

<div class="f-container clearfix col-lg-9">

<% @articles.each do |article| %>
<div class="f-item article-content col-lg-4">
	<div class="article-content-item">
		<div class="atricle-index-headline">
			<p><b><%= article.article_title %></b></p>
			<p><%= article.article_genre.genre_name %></p>
		</div>
		<div class="atricle-index-image">
			<%= link_to user_article_path(article.id) do %>
				<%= attachment_image_tag article, :article_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image_02.jpg", size: '150x150' %>
			<% end %>
		</div>
		<div class="atricle-date">
			<p><%= article.created_at.strftime('%Y/%m/%d') %></p>
		</div>
	</div>
</div>
<% end %>

</div>


<div class="col-lg-3">
<%= render 'user/articles/nav' %>
</div>



</div>