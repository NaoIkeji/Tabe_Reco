<%= render 'user/posts/nav' %>

<div class="row">
	<div class="col-lg-3"></div>
	<div class="comment-edit col-lg-6">
		<div class="comment-edit-content">
			<p><b>コメントの編集</b></p>
			<%= form_for [@post, @comment], url: user_post_comment_path(post_id: @post.id), method: :patch do |f| %>
				<%= f.text_area :comment_body, size: '50x5', placeholder: "コメントをここに", class:"form-control" %>
				<div class="comment-submit">
					<%= f.submit "編集する", class:"btn btn-info" %>
			  	</div>
			<% end %>
	    </div>
	</div>
	<div class="col-lg-3"></div>
</div><!-- row_end -->