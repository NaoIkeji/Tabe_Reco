<h2>お問い合わせページ</h2>

	<% if @contact.errors.any? %>
	  <%= @contact.errors.count %>error!
	  <% @contact.errors.full_messages.each do |message| %>
	    <%= message %>
	  <% end %>
	<% end %>

	<%= form_for(@contact, url: {controller: 'user/contacts', action: 'create' }) do |f| %>

	<p>お名前</p>

	<div>
		<%= f.label :姓 %>
		<%= f.text_field :last_name %>
	</div>

	<div>
		<%= f.label :名 %>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<%= f.label :セイ %>
		<%= f.text_field :last_name_ruby %>
	</div>

	<div>
		<%= f.label :メイ %>
		<%= f.text_field :first_name_ruby %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>

	<div>
		<p>お問いあわせ内容</p>
		<%= f.text_area :contact_body, size: "30x5" %>
	</div>


<%= f.submit '送信' %>


<% end %>