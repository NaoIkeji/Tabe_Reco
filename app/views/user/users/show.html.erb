
<%= render 'user/posts/nav' %>

<hr>

<h2><%= @user.nickname %>のマイページ</h2>

<%= link_to '投稿のトップページ', user_posts_path %>

<div>
	<p>プロフィール画像：
	<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %><br>ニックネーム：<%= @user.nickname %>
	</p>
	<p>自己紹介：<%= @user.introduction %></p>
<!-- current_userのみ表示させる -->
	<% if @user == current_user %>
		<p><%= link_to 'プロフィールの編集', edit_user_user_path(current_user.id)%></p>
    <% end %>

	<div id="follow_buttons_<%= @user.id %>">
		<%= render 'user/users/follow_form' , user: @user %>
	</div>

</div>

<hr>

<div>
	<p><%= @user.nickname %>の投稿一覧</p>
	<% @posts.each do |post| %>
		<div>
			<%= link_to user_post_path(post.id) do %>
				<%= attachment_image_tag post, :post_image, :fill, 200, 200, fallback: "no_image.jpg",size:'200x200' %>
			<% end %>
		</div>
		<div>
			<p>目標</p>
			<%= post.post_target %>
	    </div>
	    <div>
	    	<p>つぶやき</p>
			<%= post.post_body %>
	    </div>

	    <div id="favorites_buttons_<%= post.id %>">
		  <%= render partial: 'user/posts/favorite', locals: {post: post} %>
	    </div>

	    <div id="cheers_buttons_<%= post.id %>">
		   <%= render partial: 'user/posts/cheer', locals: {post: post} %>
	    </div>

		<div>
			<%= link_to "#{post.comments.count}コメント", user_post_comments_path(post.id) %>
		</div>
		<div>
			<% if post.user.id == current_user.id %>
				<p><%= link_to '編集', edit_user_post_path(post.id) %></p>
				<p><%= link_to '削除', user_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
		    <% end %>
		</div>
	<% end %>
</div>
