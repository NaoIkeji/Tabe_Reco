<h2>プロフィール登録</h2>

<%= form_for(@user, user_users_path(current_user.id), method: :post )do |f| %>
	<div>
		<%= f.label :nickname, 'ニックネーム' %>
		<%= f.text_field :nickname, autofocus: true, placeholder:"ニックネーム" %>
	</div>
	<div>
		<p><%= f.label :profile_image, 'プロフィール画像' %></p>
		<p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg" %></p>
		<p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
	</div>





	<div>
		<p><%= f.label :introduction, '自己紹介' %></p>
		<br>
		<p><%= f.text_field :introduction, size:"20x10"%></p>
	</div>
	<%= f.submit "変更を保存" %>
<% end %>