
<%= render 'user/posts/nav' %>

<hr>

<% if user_signed_in? %>
<h2>ユーザー一覧</h2>
	<% @users.each do |user| %>
		<div>
			<p>プロフィール画像：
			<%= link_to user_user_path(user.id) do %>
				<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
			<br>ニックネーム：<%= user.nickname %>
				</p>
			<% end %>
		</div>

		<div>
    		<%= render 'user/users/following_followers_statistics' , user: user %>
    	</div>

		<div id="follow_buttons_<%= user.id %>">
			<%= render 'user/users/follow_form' , user: user %>
		</div>
		<hr>
	<% end %>
<% end %>