<p><%= link_to 'トップへ戻る', admin_home_top_path %></p>

<h3>（管理者）<%= @post.user.last_name %><%= @post.user.first_name %><%= attachment_image_tag @post.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: '30x30' %>さんの投稿編集</h3>


<%= form_for(@post, url: admin_post_path(@post), method: :patch ) do |f| %>
	<div>
		<label>投稿画像</label>
	    <br>
	    <%= f.attachment_field :post_image %>
	</div>

	<div>
		<label>目標</label>
		<br>
		<% current_user.targets.each do |u| %>
			<%= f.radio_button :post_target, u.target_body %>
			<%= u.target_body %>
			<br>
		<% end %>
	</div>

		<div>
		<label>つぶやき</label>
		<br>
		<%= f.text_area :post_body %>
	</div>

		<hr>
	<%= f.submit "編集する" %>

<% end %>
