<h2>(管理者)記事の編集</h2>

<%= form_for(@article, url: admin_article_path(@article.id) ,method: :patch) do |f| %>
	<div>
		<%= f.label :タイトル %>
		<%= f.text_field :article_title %>
	</div>
	<div>
		<%= f.label :カテゴリー %>
		<%= f.text_field :article_category %>
	</div>
	<div>
		<%= f.label :投稿画像 %><br>
		<img id="preview" width="250" height="200">
		<%= f.file_field :article_image, id:"myImage" %>
	</div>
	<div>
		<%= f.label :本文 %><br>
		<%= f.text_area :article_body, size: "80x10" %>
	</div>

	<%= f.submit '投稿' %>
<% end %>

<script>
	$('#myImage').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
	});
</script>