<h1>お問い合わせ詳細</h1>

<div>
	<p>名前：<%= @contact.last_name %><%= @contact.first_name %></p>
	<p>フリガナ：<%= @contact.last_name_ruby %><%= @contact.first_name_ruby %></p>
	<p>メールアドレス：<%= @contact.email %></p>
	<p><%= @contact.created_at.strftime('%Y/%m/%d') %></p>
	<p><%= @contact.created_at.strftime('%R') %></p>
	<p>お問い合わせ内容：<%= @contact.contact_body %></p>
</div>

<div>
	<% if @contact.status == "未対応" %>
		<%= button_to "未対応", {controller: 'admin/contacts', action: 'update'},{method: :patch} %>
	<% elsif @contact.status == "対応済み" %>
		<%= button_to "対応済み",{controller: 'admin/contacts', action: 'update'},{method: :patch} %>
	<% end %>
</div>

