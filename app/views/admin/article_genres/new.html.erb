<p class="headline">ジャンル新規作成</p>

<div class="row">
  <div class="col-lg-3"></div>
    <div class="col-lg-6">
    	 <div>
          <% if @genre.errors.any? %>
            <%= @genre.errors.count %>error!
            <% @genre.errors.full_messages.each do |genre| %>
              <%= message %>
            <% end %>
          <% end %>
        </div>

        <div class="genre-form">
        	<%= form_for(@genre, url: admin_article_genres_path ,method: :post) do |f| %>
        		<div class="genre-form-item">
        			<%= f.text_field :genre_name, class:"form-control" %>
        		</div>
        		<div class="genre-submit">
        			<%= f.submit "登録する", class:"btn btn-info" %>
        		</div>
			<% end %>
			<br>
			<p class="admin-top-link"><%= link_to 'トップへ戻る', admin_home_top_path %></p>
        </div>

    </div>
  <div class="col-lg-3"></div>
</div><!-- row_end -->