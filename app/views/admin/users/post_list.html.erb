<p><%= link_to 'トップへ戻る', admin_home_top_path %></p>

<h3>（管理者）<%= @user.last_name %><%= @user.first_name %>さん<%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: '30x30' %>の投稿一覧</h3>

<% @posts.each do |post| %>
	<p><%= post.created_at.strftime('%Y/%m/%d') %></p>
	<p><%= post.created_at.strftime('%R') %></p>
	<p><%= attachment_image_tag post, :post_image, :fill, 100, 100, fallback: "no_image.jpg" %></p>
	<p>目標:<%= post.post_target %></p>
	<p>つぶやき:<%= post.post_body %></p>
	<p><%= link_to '編集', edit_admin_post_path(post) %></p>
	<p><%= link_to '削除', admin_post_path(post), method: :delete %></p>
<% end %>