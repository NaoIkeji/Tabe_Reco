<h3><%= @user.last_name + @user.first_name %>さんのコメント一覧</h3>

<% @comments.each do |comment| %>
	<div>
		<p><%= comment.post.user.nickname %></p>
		<p><%= attachment_image_tag comment.post, :post_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %></p>
		<p><%= comment.post.post_target %></p>
		<p><%= comment.post.post_body %></p>

		<p>コメント内容：<%= comment.comment_body %></p>
		<p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
	　　　<p><%= comment.created_at.strftime('%R') %></p>
		<p><%= link_to '編集', edit_admin_post_comment_path(comment.post.id, comment.id) %></p>
		<p><%= link_to '削除',admin_post_comment_path(comment.post.id, comment.id), method: :delete %></p>
		<hr>
    </div>
<% end %>