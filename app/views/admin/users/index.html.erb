<h2>＜管理者＞ユーザーの一覧</h2>

<p><%= link_to 'トップへ戻る', admin_home_top_path %></p>

<div>
<p>ユーザーの検索</p>
<%= search_form_for @search, url: admin_user_search_list_path do |f| %>
	<%= f.label :nickname_cont, placeholder: '検索するユーザーを入力' %>
	<%= f.search_field :nickname_cont %>
	<%= f.submit "検索" %>
<% end %>
</div>

<div>
	<p>登録日時</p>
	<p>お名前</p>
	<p>ニックネーム</p>
	<p>メールアドレス</p>
</div>

<hr>


<div>
	<% @users.each do |user| %>
	<%= link_to admin_user_path(user) do%>
			<div>
				<p><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %></p>
				<p>登録日時：<%= user.created_at.strftime('%Y/%m/%d') %>  <%= user.created_at.strftime('%R') %></p>
				<p>名前：<%= user.last_name %> <%= user.first_name %></p>
				<p>ニックネーム：<%= user.nickname %></p>
				<p>メールアドレス：<%= user.email %></p>
		    </div>
	   <% end %>
		<hr>
	<% end %>
</div>