<p class="headline">検索結果</p>

<div class="row">
	<div class="col-lg-1"></div>
	<div class="admin-user-list col-lg-10">
		<p class="admin-top-link"><%= link_to 'トップへ戻る', admin_home_top_path %></p>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>登録日時</th>
					<th>プロフィール画像</th>
					<th>お名前</th>
					<th>ニックネーム</th>
					<th>メールアドレス</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= user.created_at.strftime('%Y/%m/%d') %>  <%= user.created_at.strftime('%R') %>
						</td>
						<td>
							<%= link_to admin_user_path(user) do %>
							<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>
							<% end %>
						</td>
						<td>
							<%= link_to admin_user_path(user) do %>
							<%= user.last_name %> <%= user.first_name %>
							<% end %>
						</td>
						<td>
							<%= link_to admin_user_path(user) do %>
							<%= user.nickname %>
							<% end %>
						</td>
						<td>
							<%= link_to admin_user_path(user) do %>
							<%= user.email %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-lg-1"></div>
</div><!-- row_end -->
