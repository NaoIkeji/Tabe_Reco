<p class="headline"><%= current_user.last_name %><%= current_user.first_name %>さんの編集ページ</p>

<div class="row">
  <div class="col-lg-3"></div>
  <div class="user-form-page col-lg-6">
    <div class="user-form">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource, class:"form-control" %>

        <div class="error-message">

        <div class="user-form-item field">
          <p><b>お名前</b></p>
          <%= f.label :姓　%><br>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :名　%><br>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :セイ %><br>
          <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :メイ %><br>
          <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :email %><br /><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="user-form-item field">
          <%= f.label :password %><br> <i>(変更しない場合は空白のままにしてください)</i>
          <% if @minimum_password_length %>
          <em>※<%= @minimum_password_length %> 字以上で入力してください</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control",placeholder: "パスワードを入力" %>

        </div>

        <div class="user-form-item field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "確認用のパスワードを入力" %>
        </div>

        <div class="user-form-item field">
          <%= f.label :current_password %><br> <i>(変更を確認するには現在のパスワードが必要です)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder: "現在のパスワードを入力" %>
        </div>

        <div class="user-form-item user-form-submit actions">
          <%= f.submit "編集", class: "btn btn-info" %>
        </div>
        <% end %>

      <hr>
      <div class="cancel-account">
        <p>会員の退会</p>
        <p>退会すると登録した情報が全て削除されます。本当によろしいですか？</p>
      </div>
      <div class="user-form-item cancel-account-submit">
        <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当によろしいですか?" }, method: :delete, class:"btn btn-default btn-xs" %></p>
        <%= link_to "Back", :back %>
      </div>
    </div><!-- user-form_end -->
  </div><!-- user-form-page_end -->
  <div class="col-lg-3"></div>
</div>
